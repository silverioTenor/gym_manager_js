{% extends '../layout.njk' %}

{% block content %}

    {% if instructor.avatar_url %}
        <style>
            .avatar {
                background: url("{{ instructor.avatar_url }}") no-repeat;
                background-position: center;
                background-size: cover;
            }
        </style>
    {% endif %}
    
    <form class="card" method="POST" action="/instructors?_method=PUT">
        <section class="avatar"></section>

        <section class="details">
            <h3>Editar instrutor</h3>

            <input 
                type="hidden" 
                name="id" 
                value="{{ instructor.id }}"
            />

            {% include 'instructors/fields.njk' %}

        </section>
    </form>
{% endblock content %}