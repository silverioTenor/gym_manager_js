<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="text" 
            name="avatar_url" 
            placeholder="http://"
            {% if member.avatar_url %}
                value="{{ member.avatar_url }}"
            {% endif %}
        />
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="Nome do membro"
            {% if member.name %}
                value="{{ member.name }}"
            {% endif %}
        />
    </div>
</div>

<div class="item">
    <div>E-mail</div>
    <div>
        <input 
            type="text" 
            name="email" 
            placeholder="membro@exemplo.com"
            {% if member.email %}
                value="{{ member.email }}"
            {% endif %}
        />
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth"
            {% if member.birth %}
                value="{{ member.birth }}"
            {% endif %}
        />
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="masc"
                {% if member.gender == "masc" %}
                    checked
                {% endif %}
            /> Masculino
        </span>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="fem"
                {% if member.gender == "fem" %}
                    checked
                {% endif %}
            /> Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Tipo sangu√≠neo</div>
    <div>
        <select name="blood">
            {% if member.blood %}
                <option value="{{ member.blood }}" selected>{{ member.type_blood }}</option>
            {% endif %}
            <option value="">Selecione...</option>
            <option value="A1">A+</option>
            <option value="A2">A-</option>
            <option value="B1">B+</option>
            <option value="B2">B-</option>
            <option value="O1">O+</option>
            <option value="O2">O-</option>
            <option value="AB1">AB+</option>
            <option value="AB2">AB-</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Peso (kg)</div>
    <div>
        <input 
            type="text" 
            name="weight"
            {% if member.weight %}
                value="{{ member.weight }}"
            {% endif %}
        />
    </div>
</div>

<div class="item">
    <div>Altura</div>
    <div>
        <input 
            type="text" 
            name="height"
            {% if member.height %}
                value="{{ member.height }}"
            {% endif %}
        />
    </div>
</div>

<button type="submit" class="button">Salvar dados</button>